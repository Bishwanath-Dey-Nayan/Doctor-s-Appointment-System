<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Doctor's Point</title>
    <link href="~/Content/admin.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-default visible-xs">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row content">
            <div class="navbar navbar-default navbar-fixed-top hidden-xs" style="background-color:#0094ff">
                <div style="display:inline-block;float:left">
                    <h4>Doctor's point</h4>
                </div>
                <div style="display:inline-block;float:right;">
                    <a href="../../Account/LogOut"  class="btn btn-primary" style="margin-top:8px;margin-right:20px">Logout</a>
                </div>
            </div>
            
            <div class="col-sm-2 col-md-2 col-lg-2 sidenav hidden-xs">
                <li>@Html.ActionLink("Add Speciality", "Index", "Specialitie")</li>
                <li>@Html.ActionLink("Add City", "Index", "City")</li>
                <li>@Html.ActionLink("Add Area", "Index", "Area")</li>
                <li>@Html.ActionLink("Add Blood Group", "Index", "BloodGroup")</li>
                <li>@Html.ActionLink("Add Hospital Type", "Index", "HospitalType")</li>
                <li>@Html.ActionLink("Add Hospital", "Create", "Hospital")</li>
                <li>@Html.ActionLink("Add PackType", "Index", "PackType")</li>
                <li>@Html.ActionLink("Medical Package", "Index", "Package")</li>
                <li>@Html.ActionLink("Pending Transaction", "PendingTransaction", "Transaction")</li>
                <li>@Html.ActionLink("Confirmed Transaction", "ConfirmedTransaction", "Transaction")</li>
                <li>@Html.ActionLink("Doctor`s List", "Index1", "Doctor")</li>
            </div>

            <div class="col-sm-10 col-md-10 col-lg-10">
                <div class="body-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
