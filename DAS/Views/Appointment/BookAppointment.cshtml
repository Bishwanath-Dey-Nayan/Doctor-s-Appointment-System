@model DAS.Models.ViewModel.ScheduleDetails
@{
    ViewBag.Title = "Schedule Details";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container">
    <div class="col-md-6">
        <h3>Doctor`s Details</h3>
        Doctor Name: @Model.doctor.Name<br />
        Specility: @Model.doctor.speciality.Name<br />
        @Model.doctor.Phone
    </div>
    <div class="col-md-6">
        <h3>Shcedules Details</h3>
        Date of Appointment: @Model.schedule.AppointmentDate
        Start Time: @Model.schedule.StartTime<br />
        End Time: @Model.schedule.EndTime<br />
        First Appointment Fee: @Model.schedule.FirstAppointmentFee<br />
        Next Meeting Fee: @Model.schedule.NextMeetingFee<br />
    </div>

</div>
<div class="col text-center mt-5" style="margin-top:50px;">
    <a href="../../Appointment/ConfirmAppointment?DoctorId=@Model.doctor.ID&&ChamberId=@Model.schedule.ChamberID&&ScheduleId=@Model.schedule.ID " class="btn btn-danger" >Confirm</a>
</div>
